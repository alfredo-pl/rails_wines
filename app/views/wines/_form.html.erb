<%= form_with(model: wine) do |form| %>
  <% if wine.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(wine.errors.count, "error") %> prohibited this wine from being saved:</h2>

      <ul>
        <% wine.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div class="field">
    <%= form.label :score %>
    <%= form.number_field  :score , in: 0..100%>
  </div>
  <div class="field">
    <%= form.label :Strains %>
    <%= form.collection_check_boxes(:strain_ids, Strain.all.order(name: :asc), :id, :name)do |s| %>
          <%= s.label class: 'label-checkbox' do %>
          <%= s.check_box + s.text %>
          <% end %>
          <% end %>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
