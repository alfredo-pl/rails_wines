<%= form_with(model: wine) do |form| %>
  <% if wine.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(wine.errors.count, "error") %> prohibited this wine from being saved:</h2>

      <ul>
        <% wine.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div class="field">
    <%= form.label :age %>
    <%= form.number_field  :age%>
  </div>
  <div class="field">
    <%= form.label :score %>
    <%= form.number_field  :score , in: 0..100%>
  </div>
  <div class="field">
    <%= form.label :Strains %>
      <%= form.fields_for :assemblies do |s| %>
    <%= render 'assembly_fields', f: s %>
    <% end %>
    <div class="links form-inline">
      <%= link_to_add_association 'add strain', form, :assemblies %>
    </div>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
